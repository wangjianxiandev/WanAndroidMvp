<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/safe_padding"
    android:layout_marginTop="@dimen/safe_padding"
    android:layout_marginEnd="@dimen/safe_padding"
    android:layout_marginBottom="@dimen/safe_padding"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_home_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_marginEnd="@dimen/safe_padding"
            android:background="@drawable/item_imgselector"
            android:text="WJX"
            android:textColor="@color/colorBlack666"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_home_top_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginEnd="@dimen/safe_padding"
            android:background="@drawable/title_lable_shap"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:text="置顶"
            android:textColor="@color/primary_red"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@id/item_home_author"
            app:layout_constraintStart_toEndOf="@id/item_home_author"
            app:layout_constraintTop_toTopOf="@id/item_home_author" />

        <TextView
            android:id="@+id/item_home_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginLeft="@dimen/safe_padding"
            android:background="@drawable/title_lable_shap"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="新"
            android:textColor="@android:color/holo_red_light"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintStart_toEndOf="@+id/item_home_top_article"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginLeft="@dimen/safe_padding"
            android:background="@drawable/title_lable_shap1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="问答"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintStart_toEndOf="@+id/item_home_new"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />


        <TextView
            android:id="@+id/item_home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/safe_padding"
            android:layout_marginRight="@dimen/safe_padding"
            android:text="1小时前"
            android:textColor="@color/colorBlack666"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/item_home_author"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_home_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_marginEnd="@dimen/safe_padding"
            android:text="这是一个根据MVPArms框架开发玩Android的一个APP，仅供个人使用，禁止商用"
            android:textColor="@color/colorBlack333"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_home_author" />

        <TextView
            android:id="@+id/item_article_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/safe_padding"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_marginEnd="@dimen/safe_padding"
            android:layout_marginBottom="@dimen/item_margin_top"
            android:text="分类·项目"
            android:textColor="@color/colorBlack666"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_home_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>